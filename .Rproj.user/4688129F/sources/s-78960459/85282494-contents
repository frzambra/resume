\section{Research experience}
% \subsection{Vocational}
\cventry{2016}{Visiting Researcher}{Faculty of Geo-Information Science and Earth Observation (ITC)}{University of Twente}{Enschede-The Netherlands}{From September to December I worked for the Spatial Agriculture and Food Security research theme in the Department of Natural Resources (ITC-NRS). The research was focused on prediction of agricultural drought over the 90\% of the cultivated land in Chile.\newline{}
}
\cventry{2016}{Visiting Scholar}{Center for Advanced Land Management \\\textbf{Information Technologies (CALMIT)}}{University of Nebraska}{Lincoln, NE, USA}{During the first semester of year 2016 I worked on a research article about rainfall satellite long-term data products CHIRPS 2.0 and PERSIANN-CDR. The aim of the research was to evaluate its accuracy for use and application in agricultural drought over Chile. The article was pusblished on November 2016 in the Atmospheric Research journal. \newline{}
}
\cventry{2012--2015}{Consultant Researcher}{CRI Quilamapu}{National Institute of Agricultural Research (INIA)}{Chill\'an, Chile}{As part of the agroclimatic risk managing team, I proposed, derived and assess an agricultural drought index to be applied in Chile for agricutural drought monitoring. Since the year 2015 this index has been used for the Ministry of Agriculture. The assessment of the index over the Bio-Bio Region in Chile was published on June 2016 in the Remote Sensing Journal.\newline{}}

\section{Selected Publications}

\textbf{Zambrano, F.}, Vrieling, A., Nelson, A., Meroni, M., & Tadesse, T. (2018). Prediction of drought-induced reduction of agricultural productivity in Chile from MODIS, rainfall estimates, and climate oscillation indices. Remote Sensing of Environment, 219, 15-30.\\ \url{https://doi.org/10.1016/J.RSE.2018.10.006} (\textbf{Impact Factor 6.457})
\newline

\textbf{Zambrano, F.}, Wardlow, B., Tadesse, T., Lillo-Saavedra, M., & Lagos, O. (2017). Evaluating satellite-derived long-term historical precipitation datasets for drought monitoring in Chile. Atmospheric Research, 186, 26-42.\\ \url{https://doi.org/10.1016/J.ATMOSRES.2016.11.006} (\textbf{Impact Factor 3.817})
\newline

\textbf{Zambrano, F.}, Lillo-Saavedra, M., Verbist, K., Lagos, O. (2016). Sixteen Years of Agricultural Drought Assessment of the BioBío Region in Chile Using a 250 m Resolution Vegetation Condition Index (VCI). Remote Sensing, 8(6), 530.\\ \url{https://doi.org/10.3390/rs8060530} (\textbf{Impact Factor 4.118})

